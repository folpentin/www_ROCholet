<!DOCTYPE html>
<html>
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ROCholet</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="verticalMenu">
        <input type="button" class="titleMenu" onclick="location.href='@Url.Action("Index", "Club")'" value="LE CLUB >" />
        <input type="button" class="titleMenu" onclick="location.href='@Url.Action("Index", "Equipes")'" value="NOS ÉQUIPES >" />
        <input type="button" class="titleMenu" onclick="location.href='@Url.Action("Index", "EcoleR")'" value="ÉCOLE DE RUGBY >" />
        <input type="button" class="titleMenu" onclick="location.href='@Url.Action("Index", "Pedagogique")'" value="PÉDAGOGIQUE >" />
        <input type="button" class="titleMenu" onclick="location.href='@Url.Action("Index", "Abergavenny")'" value="ABERGAVENNY >" />
        <input type="button" class="titleMenu" onclick="location.href='@Url.Action("Index", "Partenaire")'" value="NOS PARTENAIRES >" />
        <input type="button" class="titleMenu" onclick="location.href='@Url.Action("Index", "Contact")'" value="CONTACT >"/>
    </div>
    <div id="navbar" class="navbar navbar-inverse navbar-fixed-top" style="justify-content: initial;">
        <div class="col-xs-4">
            <img id="openMenu" src="~/Content/img/hMenuWhite.svg" style="cursor:pointer; z-index: 100001;margin-left:0px;" />

            <img id="logoRoc" src="~/Content/img/logoEquipe/ROC_logo.gif" alt="logo ROC" style="cursor:pointer; height:45px; width:auto; margin-left:30px" />
        </div>
        <div class="col-xs-6">
            <div class="prochainMatchMini">
                <div class="col-xs-3">
                    ROC
                    <img class="logoCLub2" src="~/Content/img/logoEquipe/ROC_logo.gif" alt="logo ROC" />
                </div>
                <div class="col-xs-2" style="text-align:center">
                    <p class="infosMatch2" style="font-size:13px;">25</p>
                    <p class="infosMatch2">Juillet</p>
                    <p class="infosMatch2">15:00</p>
                </div>
                <div class="col-xs-3">
                    <img class="logoCLub2" src="~/Content/img/logoEquipe/sco_400x400.png" alt="logo SCO Angers" />
                    SCO Angers
                </div>
            </div>
        </div>
        <div class="col-xs-2" style="text-align:right">
            <input class="btnShop" type="button" value="RETOUR AU SITE !" onclick="location.href='@Url.Action("Index", "Boutique")'" />
        </div>




        @*<div class="container">
                <div class="navbar-header">
                    @Html.ActionLink("Rugby Olympique  Choletais", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>*@
    </div>
    <div class="prochainMatch">
        <div class="col-xs-2"></div>
        <div class="col-xs-2 infosClub">
            <img class="logoCLub" src="~/Content/img/logoEquipe/ROC_logo.gif" alt="logo ROC" style="margin-top:25px;" />
            <p class="nomClub">Rugby Olympiques Choletais</p>
        </div>
        <div class="col-xs-4 infosMatch">
            <p style="font-size: 15px; margin-bottom:0px">Prochain Match</p>
            <p style="font-size: 18px; margin-bottom:-5px">Samedi</p>
            <p style="font-size: 30px; margin-bottom:-8px">25</p>
            <p style="font-size: 13px; margin-bottom:3px">Juillet</p>
            <p style="font-size: 20px; margin-bottom:0px">15:00</p>
        </div>
        <div class="col-xs-2 infosClub">
            <img class="logoCLub" src="~/Content/img/logoEquipe/sco_400x400.png" alt="logo SCO" style="height:150px; " />
            <p class="nomClub">SCO Rugby Club Angers</p>
        </div>
        <div class="col-xs-2" style="text-align:center;">
            <img src="~/Content/img/right-arrow-circular-button.svg" alt="lien GoogleMaps" style="width:30px; height:auto; margin-top: 80px;" />
            <p style="font-size: 12px; margin-top:10px;">Accéder au stade</p>
        </div>
    </div>



    @*@Html.ActionLink("Ajouyer une nouvelle équipe", "PV_AddEquipe", "Manage")*@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Rugby Olympique Choletais</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    $(document).scroll(function () {
        if ($(document).scrollTop() == 0) {
            $('.prochainMatch').slideDown(500);
            $('.container').css('margin-top', '0px');
            $('.prochainMatchMini').css('display', 'none');
        }
        else {
            $('.prochainMatch').slideUp(1000);
            $('.container').css('margin-top', '100px');
            $('.prochainMatchMini').css('display', 'block');
        }
    });

    $(document).mouseup(function (e) {
        var container = $(".verticalMenu");
        if (!container.is(e.target) && container.has(e.target).length === 0) {
            container.hide();
            $("#logoRoc").css("margin-left", "30px");
        }
    });
    $("#openMenu").click(function () {
        $(".verticalMenu").toggle("slide");
        $("#logoRoc").animate({marginLeft: "270px"}, 500);
    });

</script>